<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sergio.sistz.main_v3"
    android:background="@drawable/w_step_wizard"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_main">

    <LinearLayout
        android:id="@+id/ll_select_school"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".7"></LinearLayout>

        <LinearLayout
            android:id="@+id/ll_alerts"
            android:layout_width="match_parent"
            android:layout_height="0dp"

            android:layout_weight=".20"
            android:background="@drawable/degrade_alerts_layout">
            <ListView
                android:id="@+id/lv_alerts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">
            </ListView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".1">

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Daily classrooms"
                android:textColor="@color/tzColorWhite"
                android:textSize="30dp"
                android:textStyle="bold"
                android:background="@android:color/transparent"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
