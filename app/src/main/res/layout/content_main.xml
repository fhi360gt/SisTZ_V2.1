<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sergio.sistz.main_v3"
    android:background="@drawable/tapa_start"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_main">

    <LinearLayout
        android:id="@+id/ll_select_school"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".71"></LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="ALERTS AND NOTIFICATIONS"
            android:textColor="#E71A0E"
            android:background="#FFFFFF"
            android:paddingTop="45dp"
            android:gravity="left"
            android:textSize="25dp" />

        <LinearLayout
            android:id="@+id/ll_alerts"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".20"
            android:paddingBottom="15dp"
            android:background="@drawable/degrade_alerts_layout">

            <ListView
                android:id="@+id/lv_alerts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="25dp"
                android:paddingRight="25dp">
            </ListView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".1"
            android:layout_gravity="center_vertical"
            android:background="@color/tzColorGreyDark"
            android:orientation="horizontal">
            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Daily classroom"
                android:textColor="@color/tzColorWhite"
                android:textSize="28dp"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:paddingLeft="30dp"
                android:background="@android:color/transparent"/>
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
